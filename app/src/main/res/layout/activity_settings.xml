<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <Switch
        android:id="@+id/switch_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="281dp"
        android:layout_marginEnd="26dp"
        android:checked="true"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:text="                 Sound Effects"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_track"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switch_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_sound"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="23dp"
        android:checked="true"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:text="Background Music                       "
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_track"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_settings"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_music"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="284dp"
        android:background="@drawable/button_background"
        android:onClick="navigateToMainActivity"
        android:text="Back To Menu"
        android:textColor="#000000"
        android:textSize="14sp"
        app:fontFamily="@font/press_start_2p_font" />

</RelativeLayout>
