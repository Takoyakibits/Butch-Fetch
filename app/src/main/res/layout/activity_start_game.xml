<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- TextView to display "Game Started!" message -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Started!"
        android:layout_centerInParent="true"
        app:fontFamily="@font/press_start_2p_font" /> <!-- Specify your custom font here -->

    <!-- Pause Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:textColor="#000000"
        android:background="@color/Transparent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:fontFamily="@font/press_start_2p_font" />

    <!-- Other game UI elements -->

    <ImageView
        android:id="@+id/roadImageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/_road"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/roadImageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/roadImageView1"
        android:src="@drawable/road_2"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/countText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="149dp"
        android:fontFamily="@font/presstart2pregular"
        android:text="00"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/countText"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="-150dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/presstart2pregular"
        android:text="000000"
        android:textSize="20dp" />



</RelativeLayout>
